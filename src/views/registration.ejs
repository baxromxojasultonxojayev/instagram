<%- include('parts/header') %>
<% var error %>

<section class="vh-100 d-flex flex-column justify-content-center align-items-center registration">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card text-center p-4">
          <h1>Instagram</h1>
          <strong class="text-muted registration-text">
            Sign up to see photos and videos from your friends
          </strong>
          <form method="POST">
            <% if(error) {%>
              <div class="alert alert-danger"><%= error %> </div>
            <% } %>
            <input type="tel" name="phone" class="form-control my-2 bg-light" placeholder="Mobile Number">
            <input type="text" name="name" class="form-control my-2 bg-light" placeholder="FullName">
            <input type="text" name="username" class="form-control my-2 bg-light" placeholder="UserName">
            <input type="password" name="password" class="form-control my-2 bg-light" placeholder="Password">
            <button type="submit" class="btn btn-primary w-100">SignUp</button>
          </form>
          <p class="mt-4 text-muted">
            By signing up, you agree to our <a target="_blank" href="https://help.instagram.com/581066165581870" tabindex="0">Terms</a> , <a target="_blank" href="https://help.instagram.com/519522125107875" tabindex="0">Data Policy</a> and <a target="_blank" href="/legal/cookies/" tabindex="0">Cookies Policy</a> .
          </p>
        </div>
      </div>
    </div>
    <div class="row justify-content-center mt-4">
      <div class="col-lg-4 col-md-6 col-12">
        <div class="card d-flex flex-column justify-content-center p-2 text-center align-items-center">
          <p class="m-0 p-0">Have an account? <a href="/login">Log in</a></p>
        </div>
      </div>
    </div>
  </div>
</section>


<%- include('parts/footer') %>
